@model AutoWorkshop.Web.Models.ClientMyAppointmentsViewModel

@{
    ViewData["Title"] = "Index";
}

<br />
<br />

<h2>Appointments</h2>



<br />
<br />

<div class="col-12 text-center">
    <p style="font-size:medium">Add an Appointment</p>
    <a class="btn btn-warning" asp-controller="Appointments" asp-action="CreateClient"><i class="fa fa-plus fa-2x"></i></a>
</div>
<br />
<br />
<br />

@if (Model.UnconfirmedAppointments.Count > 0)
{
    <h2>Unconfirmed Appointments</h2>
    <br />

    <table id="uncApp" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.LicensePlate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AppointmentType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Information)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.UnconfirmedAppointments)
            {
                <tr class="text-center">
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Vehicle.Brand.BrandName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Vehicle.Model)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Vehicle.LicensePlate)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.AppointmentType.Type)
                    </td>
                    <td class="align-middle">
                        <div class="dropdown ">
                            <button class="btn btn-secondary dropdown-toggle" style="padding:3px; width: 100px" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Info
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                                <div class="" style="max-width:50em ;padding: 10px; word-wrap: break-word">
                                    @Html.DisplayFor(modelItem => item.Information)
                                </div>
                            </div>
                        </div>
                    </td>                                            
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
@if (Model.Appointments.Count > 0)
{
    <br />
    <br />
    <div class="" style="background-color:darkorange; display:block; height:10px; "></div>
    <br />
    <h2>Confirmed Appointments</h2>
    <br />

    <table id="confApp" class="table table-striped table-bordered table-hover" cellspacing="0" width="100%">
        <thead class="thead-dark">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.Brand)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.Model)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Vehicle.LicensePlate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.AppointmentType)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Information)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mechanic)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StartTime)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Appointments)
            {
                <tr class="text-center">
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Vehicle.Brand.BrandName)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Vehicle.Model)
                    </td>
                    <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Vehicle.LicensePlate)
                    </td>
                        <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.AppointmentType.Type)
                    </td>
                    <td class="align-middle">
                        <div class="dropdown ">
                            <button class="btn btn-secondary dropdown-toggle" style="padding:3px; width: 100px" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Info
                            </button>
                            <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                                <div class="" style="max-width:50em ;padding: 10px; word-wrap: break-word">
                                    @Html.DisplayFor(modelItem => item.Information)
                                </div>
                            </div>
                        </div>
                    </td>  
                        <td class="align-middle">
                        @Html.DisplayFor(modelItem => item.Mechanic.FullName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StartTime)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


   


<script type="text/javascript">

    $(document).ready(function () {
        $('#confApp').DataTable();
    });
</script>

<script type="text/javascript">

    $(document).ready(function () {
        $('#uncApp').DataTable();
    });

</script>



