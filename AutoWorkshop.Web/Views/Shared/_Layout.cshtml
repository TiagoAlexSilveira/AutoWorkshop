<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoWorkshop.Web</title>

    <environment include="Development">

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
        <link href="~/lib/font-awesome/css/all.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/css/site.css" />
        <!-- Syncfusion Essential JS 2 Styles -->
        <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

    </environment>
    <environment exclude="Development">

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css"
              asp-fallback-href="~/lib/bootstrap/dist/css/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/css/site.min.css" asp-append-version="true" />
        <!-- Syncfusion Essential JS 2 Styles -->
        <link rel="stylesheet" href="https://cdn.syncfusion.com/ej2/material.css" />
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.min.css" />

    </environment>
    <script src="~/lib/jquery/jquery.js"></script>

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/theme/css/animate.css">

    <link rel="stylesheet" href="~/theme/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/theme/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/theme/css/magnific-popup.css">

    <link rel="stylesheet" href="~/theme/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/theme/css/jquery.timepicker.css">

    <link rel="stylesheet" href="~/theme/css/flaticon.css">
    <link rel="stylesheet" href="~/theme/css/style.css">


</head>
<body>

    <div class="wrap">     
        <div class="container">
            @if (this.User.Identity.IsAuthenticated)
            {
                <div class="float-right d-flex align-items-center justify-content-center" style="height:50px; width:70px; margin-left:5px; border-right:solid 2px gray;  border-left: gray 2px solid">
                    <a class="" asp-controller="Account" asp-action="Logout">Logout</a>
                </div>
                <div class="float-right d-flex align-items-center justify-content-center" style="height:50px; width:170px; margin-left:5px; ">
                    <a class="" asp-controller="Account" asp-action="ChangeUser">@this.User.Identity.Name</a>
                </div>
              
            }
            else
            {
                <div class="float-right d-flex align-items-center justify-content-center" style="height:50px; width:70px; margin-left:5px; border-right: solid 2px gray; border-left: solid 2px gray;">
                    <a class="" asp-controller="Account" asp-action="Register">Register</a>
                </div>
                <div class="float-right d-flex align-items-center justify-content-center" style="height:50px; width:70px; border-right:solid 2px gray;  border-left: gray 2px solid">
                    <a class="" asp-controller="Account" asp-action="Login">Sign In</a>
                </div>
            }


            <div class="row justify-content-between">
                <div class="col-md-3 d-flex align-items-center">
                    <a class="navbar-brand" href="index.html">Autorepair<span>.</span></a>
                </div>
                <div class="col-md-7">
                    <div class="row">
                        <div class="col">
                            <div class="top-wrap d-flex">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-location-arrow"></span></div>
                                <div class="text"><span>Address</span><span>Avenida da Liberdade Nº13</span></div>
                            </div>
                        </div>
                        <div class="col">
                            <div class="top-wrap d-flex">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-location-arrow"></span></div>
                                <div class="text"><span>Call us</span><span>(+351) 911111111</span></div>
                            </div>
                        </div>
                        @*<div class="col-md-3 d-flex justify-content-end align-items-center" style="border: green 1px solid">
                        <div class="social-media" style="border: red 1px solid">


                            <p class="mb-0 d-flex" style="border: red 1px solid">
                            <div class="">
                                <a href="#" class="d-flex align-items-center justify-content-center"><span class="fa fa-sign-in"><i class="sr-only">Sign In</i></span></a>
                            </div>
                        </p>
                        </div>
                    </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
    <nav class="navbar navbar-expand-lg navbar-dark ftco_navbar bg-dark ftco-navbar-light" id="ftco-navbar">
        <div class="container">

            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#ftco-nav" aria-controls="ftco-nav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="fa fa-bars"></span> Menu
            </button>
            @*<form action="#" class="searchform order-lg-last">
                <div class="form-group d-flex">
                    <input type="text" class="form-control pl-3">
                    <button type="submit" placeholder="" class="form-control search"><span class="fa fa-search"></span></button>
                </div>
            </form>*@
            <div class="collapse navbar-collapse" id="ftco-nav">
                <ul class="navbar-nav mr-auto">
                    @if (this.User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Client"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Clients" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Clients" asp-action="MyVehicles">My Vehicles</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Clients" asp-action="MyAppointments">My Appointments</a></li>
                        }
                        @if (User.IsInRole("Mechanic"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Mechanics" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Mechanics" asp-action="WorkAppointments">Work Appointments</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Mechanics" asp-action="MyRepairs">Repairs</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Repairs" asp-action="Create">New Repair</a></li>
                        }
                        @if (User.IsInRole("Secretary"))
                        {
                            <li class="nav-item"><a class="nav-link" asp-controller="Secretaries" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Secretaries" asp-action="UnconfirmedAppointments">Unconfirmed Appointments</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Secretaries" asp-action="ConfirmedAppointments">Confirmed Appointments</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Appointments" asp-action="Create">New Appointment</a></li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-toggle="dropdown" id="dron" aria-haspopup="true" aria-expanded="false">Accounts<b class="caret"></b></a>
                                <ul class="dropdown-menu" aria-labelledby="dron">
                                    <li><a class="dropdown-item" style="font-size:16px; color: darkorange" asp-controller="Clients" asp-action="Index">Clients</a></li>
                                    <li><a class="dropdown-item" style="font-size:16px; color: darkorange" asp-controller="Secretaries" asp-action="Index">Secretaries</a></li>
                                    <li><a class="dropdown-item" style="font-size:16px; color: darkorange" asp-controller="Mechanics" asp-action="Index">Mechanics</a></li>
                                </ul>
                            </li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Admins" asp-action="Index">Home</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Vehicles" asp-action="Index">Vehicles</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Appointments" asp-action="Create">Appointments</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Repairs" asp-action="Index">Repairs</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Brands" asp-action="Index">Brands</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="AppointmentTypes" asp-action="Index">Appointment Types</a></li>
                            <li class="nav-item"><a class="nav-link" asp-controller="Specialties" asp-action="Index">Specialties</a></li>
                        }
                    }
                    @*</div>*@
                </ul>
            </div>
        </div>
    </nav>





    <partial name="_CookieConsentPartial" />

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; 2020 - AutoWorkshop.Web</p>
        </footer>
    </div>

    <environment include="Development">


        <script src="~/lib/jquery/jquery.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
        <!-- Syncfusion Essential JS 2 Scripts -->
        <script src="https://cdn.syncfusion.com/ej2/dist/ej2.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="//cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>


        @*<script src="~/theme/js/jquery.min.js"></script>*@
        <script src="~/theme/js/jquery-migrate-3.0.1.min.js"></script>
        <script src="~/theme/js/popper.min.js"></script>
        @*<script src="~/theme/js/bootstrap.min.js"></script>*@
        <script src="~/theme/js/jquery.easing.1.3.js"></script>
        <script src="~/theme/js/jquery.waypoints.min.js"></script>
        <script src="~/theme/js/jquery.stellar.min.js"></script>
        <script src="~/theme/js/jquery.animateNumber.min.js"></script>
        <script src="~/theme/js/bootstrap-datepicker.js"></script>
        <script src="~/theme/js/jquery.timepicker.min.js"></script>
        <script src="~/theme/js/owl.carousel.min.js"></script>
        <script src="~/theme/js/jquery.magnific-popup.min.js"></script>
        <script src="~/theme/js/scrollax.min.js"></script>
        @*<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyBVWaKrjvy3MaE7SQ74_uJiULgl1JY0H2s&sensor=false"></script>
        <script src="~/theme/js/google-map.js"></script>*@
        <script src="~/theme/js/main.js"></script>

    </environment>
    <environment exclude="Development">


        <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-3.5.1.min.js"
                asp-fallback-src="~/lib/jquery/dist/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous"
                integrity="sha384-tsQFqpEReu7ZLhBV2VZlAu7zcOV+rXbYlF2cqB8txI/8aZajjp4Bqd+V6D5IgvKT">
        </script>
 

        <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"
                asp-fallback-src="~/lib/bootstrap/dist/js/bootstrap.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-aJ21OjlMXNL5UyIl/XNwTMqvzeRMZH2w8c5cRVpzpU8Y5bApTppSuUkhZXN0VxHd">
        </script>
        <script src="~/js/site.min.js" asp-append-version="true"></script>

    </environment>

    @RenderSection("Scripts", required: false)

    <ejs-scripts></ejs-scripts>
</body>
</html>
