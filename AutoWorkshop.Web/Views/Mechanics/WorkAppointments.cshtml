@model AutoWorkshop.Web.Models.MecAppointViewModel
@{
    ViewData["Title"] = "Mechanic Appointments";
}

<br />

<h2>Work Appointments</h2>  
<br />
<br />

<table class="table table-bordered">
    <thead class="thead-dark" style="text-align:center">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Client) 
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.Brand.BrandName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.Model)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vehicle.LicensePlate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AppointmentType.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Information)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Appointments)
        {
            <tr class="text-center">
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Client.FullName)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Vehicle.Brand.BrandName)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Vehicle.Model)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.Vehicle.LicensePlate)
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.AppointmentType.Type)
                </td>
                <td class="align-middle">
                    <div class="dropdown ">
                        <button class="btn btn-primary dropdown-toggle" style="padding:3px; width: 100px" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Info
                        </button>
                        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenu2">
                            <div class="" style="max-width:50em ;padding: 10px; word-wrap: break-word">
                                @Html.DisplayFor(modelItem => item.Information)
                            </div>
                        </div>
                    </div>
                </td>
                <td class="align-middle">
                    @Html.DisplayFor(modelItem => item.StartTime)
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<br />
<br />

