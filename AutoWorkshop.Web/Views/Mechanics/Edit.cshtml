@model AutoWorkshop.Web.Models.PersonEditViewModel

@{ ViewData["Title"] = "Edit"; }

<h2>Edit</h2>

<div class="text-success">
    @ViewBag.UserMessage
</div>
<br />
<h2 style=" margin-bottom:10px; border-bottom: solid 2px orange">Settings</h2>



<div class="container-fluid">
    <form method="post" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="ImageUrl" />
        <input type="hidden" asp-for="UserId" />

        <div class="row">
            <div class="col-md-3">

                <div class="d-flex justify-content-center" style="border: 1.5px solid gray; border-radius: 25px; margin-top: 10px">
                    @if (!string.IsNullOrEmpty(@Model.ImageUrl))
                    {
                        <img src="@Url.Content(@Model.ImageUrl)" alt="Image" style="border-radius:25px; max-width: 100%; height: 220px;" />
                    }
                </div>

                <div class="form-group" style="margin-top: 10px">
                    <label asp-for="ImageFile" class="control-label"></label>
                    <input asp-for="ImageFile" class="form-control" type="file" />
                    <span asp-validation-for="ImageFile" class="text-danger"></span>
                </div>

            </div>



            <div class="col-md-5">
                <h2 style="margin-bottom:2px; border-bottom: solid 2px gray">Personal Information</h2>

                <br />

                <div class="form-group">
                    <label asp-for="FirstName">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="LastName">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="DateofBirth">Date of Birth Number</label>
                    <input asp-for="DateofBirth" class="form-control" />
                    <span asp-validation-for="DateofBirth" class="text-warning"></span>
                </div>

            </div>
            <div class="col-md-1 d-flex justify-content-md-center">
                <div class="align-self-end" style="height:300px;width: 2px; border: 1px gray solid; padding-top: 20px">

                </div>
            </div>
            <div class="col-md-3" style="margin-left: auto">

                <div class="form-group" style="">
                    <input type="submit" value="Update" class="btn btn-primary" />
                    <a asp-action="ChangePassword" class="btn btn-success">Change Password</a>
                </div>

                <br />

                <div class="form-group">
                    <label asp-for="PhoneNumber">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="TaxIdentificationNumber">Tax Identification Number</label>
                    <input asp-for="TaxIdentificationNumber" class="form-control" />
                    <span asp-validation-for="TaxIdentificationNumber" class="text-warning"></span>
                </div>

                <div class="form-group">
                    <label asp-for="CitizenCardNumber">Citizen Card Number</label>
                    <input asp-for="CitizenCardNumber" class="form-control" />
                    <span asp-validation-for="CitizenCardNumber" class="text-warning"></span>
                </div>
            </div>

            <div class="col-8">
                <div class="form-group">
                    <label asp-for="StreetAddress">Street Address</label>
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-warning"></span>
                </div>
            </div>

            <div class="col-1 d-flex justify-content-center" style="padding-top:15px">
                <div class="align-self-center" style="border: gray 1px solid; width: 50px; ">

                </div>
            </div>

            <div class="col-3">
                <div class="form-group">
                    <label asp-for="PostalCode">Postal Code</label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-warning"></span>
                </div>
            </div>
        </div>

        <div class="col-3">
            <div class="form-group">
                <label asp-for="Specialty" id="lbl_sp" class="control-label"></label>
                <select asp-for="SpecialtyId" asp-items="Model.Specialties" id="specialty" class="form-control"></select>
                <span asp-validation-for="SpecialtyId" class="text-danger"></span>
            </div>
        </div> 
    </form>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
