    }


    function onChangeMechanic(Id) {

        if (Id !== undefined) {
            var statusElement = document.getElementById('MechanicId');

            $.ajax({
                type: "get",
                data: { Id: Id },
                url: '@Url.Action("GetMechanic", "Appointments")',
